# Define a function to find the max sales and day
def find_max_sales():
# Create lists
Week_list = ['Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday']
Sale_list = [50, 75, 150, 125, 100]
# Start with first sale as max
max_sale = Sale_list[0]
max_day = Week_list[0]
# Use a for loop to find the highest sale
for i in range(1, len(Sale_list)):
if Sale_list[i] > max_sale:
max_sale = Sale_list[i]
max_day = Week_list[i]
# Display results
print(f"The Max sales is $ {max_sale}")
print(f"The Max sales day is {max_day}")
# Call the function
find_max_sales()
